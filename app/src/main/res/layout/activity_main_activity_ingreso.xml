<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/abs__background_holo_light"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/HeaderIngreso"
        android:padding="8.0dp"
        android:background="@color/abs__background_holo_dark"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo" />
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/FormIngreso"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/LinearLayoutUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:alpha="0.7"
                android:layout_margin="10dp"
                android:src="@drawable/usuario" />

            <EditText
                android:id="@+id/editTextUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="18"
                android:hint="@string/label_usuario"
android:padding="10dp"
                android:inputType="text"
                android:textColor="@color/letra"
                android:theme="@style/Theme.App.Edittext" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/LinearLayoutContrasena"
            android:paddingTop="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:alpha="0.7"
                android:layout_margin="10dp"
                android:src="@drawable/password" />

            <EditText
                android:textColor="@color/letra"
                android:layout_gravity="center"
                android:id="@+id/editTextPass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_contrasena"
                android:ems="15"
                android:inputType="textWebPassword"
                android:backgroundTint="@color/appreparto4"
                android:theme="@style/Theme.App.Edittext"/>

        </LinearLayout>

        <Button
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            android:id="@+id/buttonIngresar"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_redondeado"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/label_Ingresar"
            android:onClick="validarLogin" />

    </LinearLayout>

    <ImageView
        android:id="@+id/Logo2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="410dp"
        android:contentDescription="@string/dsclogo"
        android:maxWidth="100dp"
        android:src="@drawable/logotipo"


        android:layout_marginBottom="00dp" />





</RelativeLayout>
