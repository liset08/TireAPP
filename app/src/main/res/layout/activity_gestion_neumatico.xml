<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pepe.tireapp.GestionNeumatico">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/HeaderIngreso"
        android:background="@color/appreparto2"
        android:padding="8.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:textSize="20.0sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:id="@+id/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

    </LinearLayout>

    <LinearLayout

        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true"

        android:paddingTop="5.0dip"
        android:id="@+id/TituloGC"
        android:orientation="horizontal">


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp" >

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="ID"/>

            <EditText
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:id="@+id/Placa"
                />
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                />
        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="Modelo"/>

            <EditText
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:id="@+id/Modelo"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="Marca"/>

            <EditText
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:id="@+id/Marca"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="Nº de Ejes"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Ejes"
                >
            </Spinner>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="Nº Llantas:"/>

            <EditText
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:id="@+id/Llantas"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="Carga Util:"/>

            <EditText
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:id="@+id/CargaUtil"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="Carga Neta:"/>

            <EditText
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:id="@+id/CargaNeta"
                />
        </TableRow>

        <TableRow>


        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp">

        <TableRow>
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Guardar"

                android:onClick="PruebaEquipo" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                />

        </TableRow>
    </TableLayout>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/Footer"
        android:background="@color/grey_400"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true">

        <TextView android:textSize="20.0sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:id="@+id/TextFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_footer" />

    </LinearLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Gestión Neumaticos"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/HeaderIngreso"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
