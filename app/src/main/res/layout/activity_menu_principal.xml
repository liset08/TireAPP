<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.pepe.tireapp.MenuPrincipal"

        android:background="@color/amarillo">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/HeaderIngreso"
        android:background="@color/appreparto2"
        android:padding="8.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:id="@+id/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demotext" />

    </LinearLayout>


    <ImageView
        android:id="@+id/Logo2"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/dsclogo"
        android:maxWidth="100dp"
        android:src="@drawable/camiones2"
        android:layout_below="@+id/HeaderIngreso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/FormIngreso"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="80dp"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LinearLayoutUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:id="@+id/buttonIngresar3"
                android:background="@drawable/btn_redondeado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Gestión Camiones"
                android:onClick="GestionCamion" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LinearLayoutContrasena"
            android:paddingTop="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:id="@+id/buttonIngresar2"
                android:background="@drawable/btn_redondeado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Gestión Tipo Neumatico"
                android:onClick="GestionLlanta" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LinearLayoutContrasena3"
            android:paddingTop="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:id="@+id/buttonIngresar4"
                android:background="@drawable/btn_redondeado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Lecturas y Mantemiento"
                android:onClick="validarLogin" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LinearLayoutContrasena5"
            android:paddingTop="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/blanco"
                android:layout_gravity="center"
                android:id="@+id/buttonIngresar5"
                android:background="@drawable/btn_redondeado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="Configuración"
                android:onClick="validarLogin" />

        </LinearLayout>

        <Button
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            android:id="@+id/buttonIngresar"
            android:background="@drawable/btn_redondeado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="Salir"
            android:onClick="Salir" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/Footer"
        android:background="@color/grey_400"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true">

        <TextView android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:id="@+id/TextFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_footer" />

    </LinearLayout>

</RelativeLayout>
