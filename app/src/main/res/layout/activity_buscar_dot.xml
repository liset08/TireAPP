<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.pepe.tireapp.Activities.BuscarDOTActivity"
    android:orientation="vertical"
    android:id="@+id/FormIngresoDTO"
    android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_alignWithParentIfMissing="false"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/textViewPlacaPosicion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="La Placa - PosiciÃ³n"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:id="@+id/LinearLayoutUsuario"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView32"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:alpha="0.7"
            android:layout_margin="10dp"
            android:src="@drawable/icon_neu" />

        <EditText
            android:id="@+id/editTextDTO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ems="18"
            android:hint="Ingrese DOT..."
            android:padding="10dp"
            android:inputType="text"
            android:textColor="@color/letra"
            android:theme="@style/Theme.App.Edittext" />


    </LinearLayout>
    <Button
        android:id="@+id/btnBuscarDOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        />


</LinearLayout>