<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo"
    tools:context="com.example.pepe.tireapp.Activities.LecturaActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="Capturas de Lectura"
        android:textAlignment="center"
        android:textColor="@color/negro"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="50dp"
        >


        <TableRow>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="20dp"
                android:hint="Placa:"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/txt_pla_lec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_white"
                android:inputType="numberDecimal"
                android:textSize="14sp"

                />

        </TableRow>


        <TableRow>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="20dp"
                android:hint="Posicion de llantas:"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/txt_pllan_le"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_white"
                android:inputType="text"
                android:textSize="14sp"

                />

        </TableRow>
        <TableRow>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="20dp"
                android:hint="Presiòn"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/txt_pres_lec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_white"
                android:inputType="numberDecimal"
                android:textSize="14sp"

                />

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="20dp"
                android:hint="Desgaste"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/txt_des1_lec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_white"
                android:inputType="numberDecimal"
                android:textSize="14sp"

                />

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="20dp"
                android:hint=""
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/txt_des2_lec"
                android:layout_width="133dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_white"
                android:inputType="numberDecimal"
                android:textSize="14sp"

                />

        </TableRow>
        <TableRow>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="20dp"
                android:hint=""
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/txt_des3_lec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_white"
                android:inputType="numberDecimal"
                android:textSize="14sp"

                />

        </TableRow>
        <TableRow>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:paddingStart="20dp"
                android:hint="Tipo de aviso"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

            <AutoCompleteTextView
                android:id="@+id/txt_taviso_lec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_white"
                android:inputType="text"
                android:textSize="14sp"

                />

        </TableRow>




    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabla">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tabla"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/userCPassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:paddingStart="20dp"
                android:hint="Observación"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/txt_obse_le"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_white"
                android:inputType="text"
                android:textSize="14sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginBottom="36dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_dark_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/btn_add_lec"
                android:text="Agregar"
                android:textColor="@color/abs__background_holo_light"
                android:textSize="14sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnCancelarLectura"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"

                android:layout_marginBottom="36dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_dark_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Cancelar"
                android:textColor="@color/abs__background_holo_light"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
