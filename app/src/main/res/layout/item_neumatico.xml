<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:background="@color/blanco"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:elevation="20dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:layout_gravity="center_vertical"
        android:radius="150dp"

        android:padding="10dp" >

        <ImageView
            android:id="@+id/foto_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="17dp"
            android:foregroundGravity="center"

            app:srcCompat="@drawable/bg_logoneumatico"/>


        <TextView
            android:id="@+id/dot_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:gravity="center"
            android:text="DOT"
            android:textAlignment="textStart"
            android:textColor="@color/appreparto1"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/marca_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot_text"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Marca"
            android:layout_toEndOf="@+id/foto_image"

            android:textColor="@color/negro"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/modelo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/marca_text"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Modelo"
            android:layout_toEndOf="@+id/foto_image"
            android:textColor="@color/negro"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btn_itemedit"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/modelo_text"
            android:background="@drawable/bg_ripple"
            android:gravity="center"
            android:text="Editar"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textAlignment="center"
            android:textColor="@color/blanco" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
