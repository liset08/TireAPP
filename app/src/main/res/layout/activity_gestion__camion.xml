<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroTabletas"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pepe.tireapp.Gestion_Camion"
    android:verticalScrollbarPosition="right">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

        android:background="@color/amarillo"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="Nuevo Camion"
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:textStyle="bold" />


        <AutoCompleteTextView
            android:id="@+id/editTextTag"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_user_icon"
            android:drawablePadding="5dp"
            android:hint="Tag"
            android:paddingStart="10dp"
            android:inputType="text"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/editTextMarca"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_confirm_icon"
                    android:drawablePadding="5dp"
                    android:hint="Marca"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:textSize="14sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/editTextModelo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/rounded_white"
                    android:drawableLeft="@drawable/ic_confirm_icon"
                    android:drawablePadding="5dp"
                    android:hint="Modelo"
                    android:inputType="text"
                    android:textSize="14sp"

                    />
            </LinearLayout>


        </LinearLayout>




        <AutoCompleteTextView
            android:id="@+id/editTextKilometraje"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_confirm_icon"
            android:drawablePadding="5dp"
            android:hint="Kilometraje"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:textSize="14sp"

            />

        <AutoCompleteTextView
            android:id="@+id/editTextPlaca"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_confirm_icon"
            android:drawablePadding="5dp"
            android:hint="Placa"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="14sp"

            />

        <AutoCompleteTextView
            android:id="@+id/editTextNEjes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_confirm_icon"
            android:drawablePadding="5dp"
            android:hint="Nro. de ejes"
            android:inputType="number"
            android:paddingStart="10dp"
            android:textSize="14sp"

            />


        <AutoCompleteTextView
            android:id="@+id/editTextPNeto"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_confirm_icon"
            android:drawablePadding="5dp"
            android:hint="Peso Neto"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:textSize="14sp"

            />
        <AutoCompleteTextView
            android:id="@+id/editTextPBruto"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_confirm_icon"
            android:drawablePadding="5dp"
            android:hint="Peso Bruto"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:textSize="14sp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"

            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttomAgregar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:layout_marginBottom="36dp"
                android:layout_marginEnd="25dp"

                android:background="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Agregar"
                android:textColor="@color/abs__background_holo_light"
                android:textSize="14sp"
                android:textStyle="normal" />




            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"

                android:layout_marginBottom="36dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Cancelar"
                android:textColor="@color/abs__background_holo_light"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
</RelativeLayout>
